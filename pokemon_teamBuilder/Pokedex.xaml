<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokemon_teamBuilder.Pokedex"
             Title="Pokedex">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Entry x:Name="PokemonEntry" Placeholder="Enter Pokémon name or ID"/>
            <Button x:Name="DownloadBtn" Text="Download Pokémon" Clicked="DownloadBtn_Clicked"/>
            <Label x:Name="ViewContents" Text="Pokémon info will appear here"/>
            <Image x:Name="PokemonImage" WidthRequest="200" HeightRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>